#!/usr/bin/python3
"""
This script factorizes as many numbers as possible from a file into a product of two smaller numbers.
Usage: ./factors <file>
"""

import sys
from math import isqrt


def is_prime(n):
    """
    Check if a number is prime.
    
    Args:
    n (int): The number to check
    
    Returns:
    bool: True if the number is prime, False otherwise
    """
    if n < 2:
        return False
    for i in range(2, isqrt(n) + 1):
        if n % i == 0:
            return False
    return True


def factorize(n):
    """
    Factorizes a number into a product of two smaller numbers.

    Args:
    n (int): The number to be factorized

    Returns:
    str: The string representation of the factorization in the format "n=p*q"
    """
    if is_prime(n):
        return f"{n}={n}*1"

    for i in range(2, isqrt(n) + 1):
        if n % i == 0:
            return f"{n}={i}*{n//i}"

    return f"{n}={n}*1"


def main():
    """
    Main function to read the file and factorize numbers.
    """
    if len(sys.argv) != 2:
        sys.exit(1)

    try:
        with open(sys.argv[1], 'r') as file:
            for line in file:
                number = int(line.strip())
                print(factorize(number))
    except FileNotFoundError:
        sys.exit(1)
    except ValueError:
        sys.exit(1)


if __name__ == "__main__":
    main()

