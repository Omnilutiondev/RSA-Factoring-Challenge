#!/usr/bin/python3

import sys

def factorize(n):
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return f"{n}={n//i}*{i}"
    return f"{n}={n}*1"

if len(sys.argv) != 2:
    print("Usage: factors <file>")
    sys.exit(1)

try:
    with open(sys.argv[1], 'r') as file:
        for line in file:
            num = int(line.strip())
            print(factorize(num))
except FileNotFoundError:
    print(f"Error: File '{sys.argv[1]}' not found")
    sys.exit(1)
except ValueError:
    print("Error: Invalid number in the file")
    sys.exit(1)
